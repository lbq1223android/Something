<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical" >


        <TextView
            android:visibility="gone"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B2B2B2" />
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/rg_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="50dp"
            >


          <RadioButton
                android:id="@+id/rb1"
                style="@style/weibo_tab"
                android:drawableTop="@drawable/home_selector"
                android:checked="true"
                android:textSize="12sp"
                android:text="图说" />

            <RadioButton
                android:id="@+id/rb2"
                style="@style/weibo_tab"
                android:textSize="12sp"
                android:drawableTop="@drawable/house_selector"
                android:text="动态" />

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/tool_on"
                />


            <RadioButton
                android:visibility="visible"
                android:id="@+id/rb3"
                android:textSize="12sp"
                style="@style/weibo_tab"
                android:drawableTop="@drawable/tool_selector"
                android:text="消息" />

            <RadioButton
                android:id="@+id/rb4"
                style="@style/weibo_tab"
                android:textSize="12sp"
                android:drawableTop="@drawable/person_selector"
                android:text="我的" />

        </RadioGroup>
    </LinearLayout>



</LinearLayout>